<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="volume"
        android:title="Volume"
        android:summary="Volume of the alarm"
        android:entries="@array/vol_name"
        android:entryValues="@array/vol_value"
        android:dialogTitle="Choose a volume level"/>
    <ListPreference
        android:key="ring"
        android:title="Ringtones"
        android:summary="Choose different ringtones"
        android:entries="@array/ring_name"
        android:entryValues="@array/ring_value"
        android:dialogTitle="Choose the ringtone"/>
</PreferenceScreen>
